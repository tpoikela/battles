{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": [
        "node_modules/@types",
        "typings"
    ]
  },
  "include": [
      "./client/**/*",
      "./typings/**/*",
      "./tests/**/*.ts",
      "./public/*.json"
  ],
  "exclude": [
    "node_modules/**/*",
    "build"
  ],
  "awesomeTypescriptLoaderOptions": {
      "useCache": true
  }
}

{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "tsDist",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": [
        "node_modules/@types",
        "typings"
    ]
  },
  "include": [
      "./src/**/*",
      "./scripts/*.ts",
      "./tests/**/*.ts",
      "./typings/*.d.ts",
      "./public/*.json"
  ],
  "exclude": [
    "node_modules/**/*",
    "tsDist"
  ],
  "awesomeTypescriptLoaderOptions": {
      "useCache": true
  }
}

{
  "name": "battles",
  "version": "0.1.0",
  "description": "Roguelike game situated in cold north",
  "main": "main.electron.js",
  "dependencies": {
    "@types/node": "^10.12.26",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "blanket": "^1.2.3",
    "command-line-args": "^5.0.2",
    "csstype": "^2.6.2",
    "eslint": "^4.19.1",
    "file-loader": "^2.0.0",
    "file-saver": "^1.3.8",
    "js-md5": "^0.6.0",
    "linewrap": "^0.2.1",
    "localforage": "^1.7.3",
    "marked": "^0.3.19",
    "prettybnf": "^0.1.3",
    "react": "^16.8.3",
    "react-bootstrap": "^0.31.3",
    "react-bootstrap-modal": "^4.2.0",
    "react-contextmenu": "^2.10.0",
    "react-dom": "^16.8.3",
    "react-modal": "^3.8.1",
    "react-test-renderer": "^16.8.3",
    "sass": "^1.17.1",
    "typescript": "^3.3.3",
    "uglify-es": "^3.3.9",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-enzyme": "^0.6.5",
    "@types/mocha": "^5.2.6",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "~3.5.0",
    "chai-enzyme": "^1.0.0-beta.1",
    "coveralls": "^2.12.0",
    "electron": "^3.1.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prefer-object-spread": "^1.1.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint_d": "^5.3.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fake-indexeddb": "^2.0.5",
    "gulp-rename": "^1.4.0",
    "html-loader": "^0.5.5",
    "istanbul": "~0.4.5",
    "jsdom": "~12.0.0",
    "json-loader": "^0.5.7",
    "markdown-loader": "^3.0.0",
    "mocha": "~5.2.0",
    "node-localstorage": "^1.3.1",
    "node-sass": "^4.11.0",
    "nyc": "^11.9.0",
    "raw-loader": "^0.5.1",
    "sass-lint": "^1.10.2",
    "sass-loader": "^7.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-mocha": "^6.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-consistent-codestyle": "^1.15.0",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "engines": {
    "node": ">= 7.0"
  },
  "contributors": [
    "Tuomas Poikela <tuomas.sakari.poikela@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/tpoikela/battles.git"
  },
  "nyc": {
    "exclude": [
      "**/rot.js",
      "tests"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "client/src/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "scripts": {
    "build": "npm run build:sass && npm run build:production",
    "build:production": "npm run create-config-prod && NODE_ENV=production webpack",
    "build:sass": "sass scss/style.scss --style compressed > build/style.css",
    "clean": "bin/clean.sh",
    "create-config-prod": "cp -n client/config/production.js public/config.js",
    "create-config-devel": "cp -n client/config/devel.js public/config.js",
    "coverage": "perl bin/cov_test.pl",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "dev": "webpack-dev-server",
    "electron": "electron .",
    "hooks": "perl bin/deploy_hooks",
    "minimize": "uglifyjs --mangle --compress ./build/*.js",
    "publish": "npm run build && ./bin/publish",
    "start": "python -m SimpleHTTPServer",
    "test": "ts-mocha 'tests/client/**/*.spec.ts'",
    "test:watch": "mocha --watch -r ts-node/register 'tests/client/**/*.spec.ts'",
    "test:tsx": "mocha -r ts-node/register --require tests/helpers/browser.ts 'tests/client/**/*.spec.tsx'",
    "test:jsx": "NODE_ENV=test mocha --require tests/helpers/browser.js --compilers .:babel-core/register tests/client/jsx/*.jsx"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tpoikela/battles/issues"
  }
}
